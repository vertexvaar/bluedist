<section>
    <h1>Login</h1>
    <form method="post" action="/login" id="login">
        <table>
            <tr>
                <td>
                    <label>Username
                        <input type="text" name="username"/>
                    </label>
                </td>
                <td>
                    <label>Password
                        <input type="password" name="password"/>
                    </label>
                </td>
                <td>
                    <button type="submit">Login</button>
                </td>
            </tr>
        </table>
    </form>
</section>
