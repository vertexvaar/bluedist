<div id="debugtoolbar"
     style="position: relative ;display: block; width: calc(100% - 10px); height: 75px; background-color: #333333; color: #cccccc; padding: 5px"
>
    <div style="position: absolute; right: 5px; ">
        <a style="color: #cccccc;" href="#" onclick="document.querySelector('#debugtoolbar').remove(); return false;">Close</a>
    </div>
    <div>Route: {{ route.controller }}::{{ route.action }}</div>
    {% if session.authenticated %}
        <div>User (authenticated): {{ session.username }}</div>
    {% else %}
        <div>User (anonymous session)</div>
    {% endif %}
    <div>Context: {{ context.name }}</div>
</div>
