{% if context.name == 'Testing' %}
    {% set position = 'relative' %}
{% else %}
    {% set position = 'fixed' %}
{% endif %}
<div id="debugtoolbar" style="position: {{ position }}; bottom: 0; left: 0; display: block; width: 100%; height: 75px; background-color: #333333; color: #cccccc">
    <div style="position: absolute; right: 0; ">
        <a style="color: #cccccc;" href="#" onclick="document.querySelector('#debugtoolbar').remove(); return false;">Close</a>
    </div>
    <div>Route: {{ route.controller }}::{{ route.action }}</div>
    {% if session.authenticated %}
        <div>User (authenticated): {{ session.username }}</div>
    {% else %}
        <div>User (anonymous session)</div>
    {% endif %}
    <div>Context: {{ context.name }}</div>
</div>
